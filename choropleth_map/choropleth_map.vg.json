{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Choropleth map of smoking rates across countries in 2022.",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/CaiHeShun/Vega-Lite/main/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/CaiHeShun/Vega-Lite/main/smoking-rates-by-country-2024.csv",
          "format": {"type": "csv"}
        },
        "key": "country",
        "fields": ["smokingRatesByCountry_rateBothPct2022"]
      }
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "smokingRatesByCountry_rateBothPct2022",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [10, 20, 30],
        "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
      },
      "title": "Smoking Rate (%)"
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {
        "field": "smokingRatesByCountry_rateBothPct2022",
        "type": "quantitative",
        "title": "Smoking Rate (%)"
      }
    ]
  },
  "config": {}
}
